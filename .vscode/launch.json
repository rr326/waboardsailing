    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Nodejs: windmap",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/windmap",
            "program": "./src/index.ts",  
            "preLaunchTask": "tsc: build ",
            "outFiles": [
                "./dist/**/*.js"
            ],          
        }
    ]
}
